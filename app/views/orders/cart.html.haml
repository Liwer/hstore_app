            %table.table-1
              %tbody
                %tr.t-header
                  %th.col-ord-1
                    .row
                      .span4
                        Product
                      .span1
                        %p.text-right
                          Qty
                  %th.col-ord-2 Price
                - @cart.each_with_index do |p, i|
                  %tr
                    %td.col-ord-1
                      %strong
                        = p['name']
                      %br
                      - p['options'].each_with_index do |o, ii|
                        .row
                          .span4
                            = "Объем: #{o['volume']}" if o['volume']
                            = "(нетто: #{o['mass']})," if o['mass']
                            = "Кол-во: #{o['amount']})," if o['amount']
                            = "Упаковка: #{o['packing'].mb_chars.downcase}" if o['packing']
                          .span1
                            %p.text-right
                              = o['count']

                    %td.col-ord-2
                      = p['price']
                %tr
                  %th.col-ord-1
                    Итог:
                  %td.col-ord-2
                    %strong
                      = @cart_price

          .form_btns
            = link_to "Clear", clear_cart_path, class: 'more_btn2'
            %button{type: 'button', class: 'more_btn2', id: 'submit-button'}
              Submit

